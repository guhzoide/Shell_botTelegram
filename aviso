#!/bin/bash

#guarda a hora e a data que o script roda
data=$(date +'%d-%m-%Y')
hora=$(date "+%r" )

#manda a msg com os resultado das variaveis
curl -s -X POST https://api.telegram.org/bot<TOKENBOT>/sendMessage -d chat_id=<chatid> -d text="O computador foi ligado no dia $data as $hora logado como $USER"

#senha de seguranca
pass=$(zenity --password --width=250)

#caso a variavel 'pass' esteja vazia a pergunta persiste 
while [ -z $pass ]
do	
	pass=$(zenity --password --width=250)
done

#avalia a senha de seguranca e toma as medidas descritas dentro do 'case'
case $pass in
	< condição>) #acao ;;    

        *) curl -s -X POST https://api.telegram.org/bot<TOKENBOT>/sendMessage -d chat_id=<chatid> -d text="Nome: $nome"
           zenity --error --timeout=5 --width=250 --height=250 --text="****** SENHA INVÁLIDA, DESLIGANDO COMPUTADOR ******"
           #acao ;;
esac

